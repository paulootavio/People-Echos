@{
    ViewBag.Title = "People Echos";
}

<body data-ng-app="appHome">
    <div data-ng-controller="appHomeController">
    <div class="container-fluid">
       
        <div class="col-sm-offset-3 col-sm-6 text-center box-selecione" style="margin-bottom:15px;">
                      <h1 style="font-size: 18px">ESCOLHA UM PERFIL E FAÇA PARTE DESSA REDE:</h1>
        </div>
 
        <div class="col-xs-12 col-md-4" >

                <button class="nostyle" ng-click="LoadConsultor()" style="text-decoration: none !important;">
                   <img src="../../Images/box/People_Echos_logo_consultor.png"/ style="width:67px;height:auto;">
                    Consultor
                </button>         
        </div>

        <div class="col-xs-12 col-md-4"">
                 <button class="nostyle" ng-click="LoadFacilitador()" style="text-decoration: none !important;">
                  <img src="../../Images/box/People_Echos_logo_facilitador.png"/ style="width:67px;height:auto;">
                                          
                      Facilitador
                </button>          
        </div>

        <div class="col-xs-12 col-md-4">
                  <button class="nostyle" ng-click="LoadAprendizagem()" style="text-decoration: none !important;">
                  <img src="../../Images/box/People_Echos_logo_articulardor.png"/ style="width:67px;height:auto;">
                      Aprendizagem
                </button> 
        </div>

        <div class="col-xs-12 col-md-4">
                  <button class="nostyle" ng-click="LoadParceiro()" style="text-decoration: none !important;">
                  <img src="../../Images/box/People_Echos_logo_Parceiro.png"/ style="width:67px;height:auto;">
                    Parceiro Projeto
                </button> 
        </div>
    </div>
        </div>
</body>

<style>
    .Box-Index-Auth {
        height: 100px;
        border: 1px solid #0C0C0C;
        background-color: #0C0C0C;
        font-weight: bold;
        font-size: 30px;
        color: white;
        text-align: center;
        padding-top: 25px;
        padding-bottom: 15px;
        text-decoration: none !important;
    }

        .Box-Index-Auth:hover {
            background-color: #292929;
        }

    button {
        width: 100%;
        text-decoration: none !important;
        height: 100px;
        border: 1px solid #0C0C0C;
        background-color: #0C0C0C;
        font-weight: bold;
        font-size: 30px;
        color: white;
        text-align: center;
        padding-top: 25px;
        padding-bottom: 15px;
        margin-bottom: 15px;
    }
     .box-selecione {
            font-size: 18px;
            border-top: solid;
            border-bottom: solid;
            color: orange;
            margin-top: 15px;
        }
        button:hover {
            background-color: #292929;
        }
</style>
<script>

    (function (angular) {
        var appHome = angular.module('appHome', []);
        appHome.controller('appHomeController', ['$scope', function ($scope) {
            $scope.heartLoadConsultor = true;
            $scope.heartLoadFacilitador = true;
            $scope.heartLoadParceiro = true;
            $scope.heartLoadAprendizagem = true;

            $scope.LoadConsultor = function () {
                $scope.heartLoadConsultor = false;

                var url = '@Url.Action("Cadastro", "Consultor")';
               document.location.href = url;
            };
            $scope.LoadAprendizagem = function () {
                $scope.heartLoadAprendizagem = false;
                var url = '@Url.Action("Cadastro", "Aprendizagem")';
                document.location.href = url;
            };
            $scope.LoadParceiro = function () {
                $scope.heartLoadParceiro = false;
                var url = '@Url.Action("Cadastro", "ParceiroProjeto")';
                document.location.href = url;
            };
            $scope.LoadFacilitador = function () {
                $scope.heartLoadFacilitador = false;
                var url = '@Url.Action("Cadastro", "Facilitador")';
                document.location.href = url;
            };


        }]);


    })(window.angular);
</script>
